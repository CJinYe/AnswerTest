<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:auto="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <ScrollView android:layout_width="wrap_content"
                android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/fragment_choice_ll_big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <view.MtextView
                    android:id="@+id/fragment_choice_mv_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:textSize="25sp"
                >
                </view.MtextView>

                <ImageButton
                    android:id="@+id/fragment_choice_but_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_answer_selector"
                    android:padding="10dp"
                    android:src="@drawable/button_play_music"/>


                <!--四个选项-->
                <LinearLayout
                    android:id="@+id/fragment_choice_ll_A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                >
                    <RadioButton
                        android:id="@+id/fragment_choice_rb_A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:button="@drawable/radio_button_normal"/>
                    <TextView
                        android:id="@+id/fragment_choice_mv_A_answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="25sp"
                    >
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_choice_ll_B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                >
                    <RadioButton
                        android:id="@+id/fragment_choice_rb_B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:button="@drawable/radio_button_normal"/>
                    <TextView
                        android:id="@+id/fragment_choice_mv_B_answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="25sp"
                    >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_choice_ll_C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                >
                    <RadioButton
                        android:id="@+id/fragment_choice_rb_C"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:button="@drawable/radio_button_normal"/>
