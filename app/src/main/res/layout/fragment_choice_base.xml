                        android:textSize="25sp"
                    >
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_choice_ll_G"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
