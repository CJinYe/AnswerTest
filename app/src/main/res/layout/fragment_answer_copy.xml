<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:auto="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <ScrollView android:layout_width="wrap_content"
                android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/fragment_choice_ll_big"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <view.MtextView
                    android:id="@+id/fragment_choice_mv_question"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:elegantTextHeight="true"
                    android:textColor="#000000"
                    android:textSize="25sp"
                >
                </view.MtextView>


                <!--四个选项-->
                <LinearLayout
                    android:id="@+id/fragment_choice_ll_A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/shape_answer_normal"
                    android:orientation="horizontal"
                    android:visibility="gone"
                >
                    <TextView
                        android:id="@+id/fragment_choice_Tv_A"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="　A  "
                        android:textColor="@color/ChoiceABCDNormal"
                        android:textSize="20sp"
                    />
                    <TextView
                        android:id="@+id/fragment_choice_Tv_A2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="|"
                        android:textColor="#337e7e7e"
                        android:textSize="32sp"
                    />
                    <TextView
                        android:id="@+id/fragment_choice_mv_A_answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:elegantTextHeight="true"
                        android:textColor="#000000"
                        android:textSize="19sp"
                    >
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_choice_ll_B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/shape_answer_normal"
                    android:orientation="horizontal"
                    android:visibility="gone"
                >
                    <TextView
                        android:id="@+id/fragment_choice_Tv_B"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="　B  "
                        android:textColor="@color/ChoiceABCDNormal"
                        android:textSize="20sp"
                    />
                    <TextView
                        android:id="@+id/fragment_choice_Tv_B2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="|"
                        android:textColor="#337e7e7e"
                        android:textSize="32sp"
                    />
                    <TextView
                        android:id="@+id/fragment_choice_mv_B_answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:elegantTextHeight="true"
                        android:textColor="#000000"
                        android:textSize="19sp"
                    >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_choice_ll_C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/shape_answer_normal"
                    android:orientation="horizontal"
                    android:visibility="gone"
                >
                    <TextView
                        android:id="@+id/fragment_choice_Tv_C"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="　C  "
                        android:textColor="@color/ChoiceABCDNormal"
                        android:textSize="20sp"
                    />
                    <TextView
                        android:id="@+id/fragment_choice_Tv_C2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="|"
                        android:textColor="#337e7e7e"
                        android:textSize="32sp"
                    />
                    <TextView
                        android:id="@+id/fragment_choice_mv_C_answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:elegantTextHeight="true"
                        android:textColor="#000000"
                        android:textSize="19sp"
                    >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_choice_ll_D"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/shape_answer_normal"
                    android:orientation="horizontal"
                    android:visibility="gone"
                >
                    <TextView
                        android:id="@+id/fragment_choice_Tv_D"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="　D  "
                        android:textColor="@color/ChoiceABCDNormal"
                        android:textSize="20sp"
                    />
                    <TextView
                        android:id="@+id/fragment_choice_Tv_D2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="|"
                        android:textColor="#337e7e7e"
                        android:textSize="32sp"
                    />
                    <TextView
                        android:id="@+id/fragment_choice_mv_D_answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:elegantTextHeight="true"
                        android:textColor="#000000"
                        android:textSize="19sp"
                    >
                    </TextView>
                </LinearLayout>
                <!--正确答案，默认是隐藏的-->

                <TextView
                    android:id="@+id/fragment_choice_mv_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="10dp"
                    android:elegantTextHeight="true"
                    android:textColor="#169dfd"
                    android:textSize="25sp"
                >
                </TextView>


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>